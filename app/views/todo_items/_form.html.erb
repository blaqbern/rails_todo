<%= form_for([@todo_list, @todo_item], remote: true) do |f| %>
  <% if @todo_item.errors.any? %>
    <div class='alert alert-danger' id="error_explanation">
      <h3><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h3>

      <ul>
      <% @todo_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="field form-group">
      <%= f.label :task_title, 'Task' %>
      <%= f.text_field :task_title, class: 'form-control', placeholder: 'Your new list item' %>
      <%= f.label :description, 'Description' %>
      <%= f.text_area :description, rows: 5, class: 'form-control', placeholder: 'Task description' %>
    </div>
    <div class="field form-group form-inline">
      <%= f.label :due_date, 'Due date' %><br>
      <%= f.text_field :due_date, class: 'form-control date-picker' %>
    </div>
    <% if params[:id] %>
      <div class='field checkbox'>
        <label for='done'>
          <%= f.check_box :done %> Mark this task completed
        </label>
      </div>
    <% end %>
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>
